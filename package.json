{
  "name": "ai-html-generator",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=ai-html-generator-production --local --ip 0.0.0.0 --port 3000",
    "build": "npm run build:css && vite build",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/static/styles.css --minify",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./public/static/styles.css --watch",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name ai-html-generator",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:migrate:local": "wrangler d1 migrations apply ai-html-generator-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply ai-html-generator-production",
    "db:seed": "wrangler d1 execute ai-html-generator-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute ai-html-generator-production --local",
    "db:console:prod": "wrangler d1 execute ai-html-generator-production",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.64.0",
    "@google/generative-ai": "^0.24.1",
    "hono": "^4.9.8",
    "openai": "^5.23.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250924.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
